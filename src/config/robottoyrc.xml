<?xml version="1.0"?>

<!--
Robot Toy configuration file.  This file is loaded by the robot toy app
and defines the various configuration that the application needs
-->

<robotconf>
    <!--
    The object factories are used to produce the concrete classes
    used by the robot toy app
    -->
    <objectfactories>
        <worldfactory>rea.toyrobot.factories.RectangleWorldFactory</worldfactory>
        <compassfactory>rea.toyrobot.factories.CompassFactory</compassfactory>
        <perspectivefactory>rea.toyrobot.factories.WorldViewFactory</perspectivefactory>
    </objectfactories>

    <!-- world configuration -->
    <worldconfig>
        <width>5</width>
        <length>5</length>
    </worldconfig>

    <!-- compass configuration -->
    <compassconfig>
        <!-- the place command will override this anyway -->
        <initialpos>NORTH</initialpos>
    </compassconfig>

    <worldactions>
        <worldaction>rea.toyrobot.actions.world.PlaceAction</worldaction>
    </worldactions>

    <globalactions>
        <globalaction>rea.toyrobot.actions.physicalobjects.MoveAction</globalaction>
    </globalactions>

    <localactions>
        <localaction>rea.toyrobot.actions.physicalobjects.LeftAction</localaction>
        <localaction>rea.toyrobot.actions.physicalobjects.RightAction</localaction>
        <localaction>rea.toyrobot.actions.physicalobjects.ReportAction</localaction>
    </localactions>
</robotconf>